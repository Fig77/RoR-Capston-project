
<div class='default-grid-template'>
  <div class='g-col-start-6 g-col-end-8 g-col-sm-start-1 g-col-md-start-3'>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class='d-flex m-w justify-c-center'>Sign up</h2>
  <div class="field">
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class:'field-login field-title d-inline', placeholder: 'username' %>
  </div>
  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:'field-login field-title d-inline', placeholder: 'name' %>
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'field-login field-title ', placeholder: 'email' %>
  </div>
  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:'field-login field-title d-inline', placeholder: 'password'%>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'field-login field-title d-inline', placeholder: 'confirm pass' %>
  </div>
  <div class="actions">
    <%= f.submit "Create", class: 'field-article field-create'%>
  </div>
<% end %>
</div>
</div>


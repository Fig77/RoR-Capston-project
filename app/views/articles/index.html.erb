<!-- header will be here -->
<% unless @index_data.nil? %>
	<div class='default-grid-template'>
		<div class='featured-article row' style = "background:url(<%= url_for(@index_data['feature'].image) if @index_data['feature'].image.attached? %>) no-repeat; background-size: 100% 100%; object-fit: cover; background-position: center;">
		<div class='m-left-1 d-flex d-flex-col preview-text'>
			<%= link_to article_path(@index_data['feature'].id) do %>
  				<h1><%= @index_data['feature'].title %></h1>
			<% end %>
		    <h3 class='author'> Written by <%= @index_data['feature'].author.username %> </h3>
		    <p class='bg-white d-inline'><%= @index_data['feature'].text.truncate(95) %></p>
		    </div>
		</div>
		<% @index_data['new_from_categories'].each do |c| %>
		<div class='article-container col-lg-4 col-sm-12' style = "background:url(<%= url_for(c.article.image) if c.article.image.attached? %>) no-repeat; background-size: auto auto; object-fit: cover; background-position: center;">
  			<div class='text-container-article-p text-overflow-hidden'>
  			  <%= link_to category_path(c.category.id) do %>
  				  <h2 class='bg-white d-inline'><%= c.category.name %></h2>
			  <% end %>
			  <br>
			  <%= link_to article_path(c.article) do %>
			      <h3 class='m-0 bg-white d-inline'> <%= c.article.title %></h3> 
			  <% end %>
			  <h3 class='author bg-white d-inline'> Written by <%= c.article.author.username %> </h3>
			</div>
			</div>

  	<% end %>

			</div>
<% end %>
